<body>
    <!-- Top-right Button -->
    <a href="Login" class="top-right-button">Login</a>

    <label for="requestBox">Request Access Below</label>
    <input type="text" id="requestBox" placeholder="Full Name">
    <button id="requestButton">Request</button>

    <script>
        document.getElementById("requestButton").addEventListener("click", function () {
            const requestMessage = document.getElementById("requestBox").value.trim();

            if (requestMessage === "") {
                alert("Please enter a request before submitting.");
                return;
            }

            // Send request to the bot via an API
            fetch("https://discord.com/oauth2/authorize?client_id=1376865001641607168&permissions=2147510272&integration_type=0&scope=bot", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ message: requestMessage })
            }).then(response => {
                if (response.ok) {
                    alert("Request sent successfully!");
                    document.getElementById("requestBox").value = "";
                } else {
                    alert("Failed to send request.");
                }
            }).catch(error => {
                console.error("Error:", error);
                alert("An error occurred.");
            });
        });
    </script>
